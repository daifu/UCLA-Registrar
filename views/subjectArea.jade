div(data-role='page', id='subjectArea')
  header(data-role='header')
    a(href="/uclaregistrar#"+ucla_term+"page", data-icon='arrow-l', data-direction='reverse', rel='external')
      = "Back"
    h1=ucla_title
  div(data-role='content')
    //check
    - if(ucla_classes.length)
      //create a listview wrapper
      ul(data-role='listview', data-filter='true')
        //foreach of the collected term
        - ucla_classes.forEach(function(cls){
          li
            a(href="/uclaregistrar/"+ucla_term+"/"+ucla_subject+"/"+cls['key'], alt='key')
              h3=cls['name']
        - })
     - else
      p='No classes are scheduled for this subject area this quarter.'
  div(data-role='collapsible', data-theme='a', data-content-theme='a')
    h3='Go back to other pages'
    - ucla_back_links.forEach(function(bl){
      a(href=bl['link'], data-role='button', data-theme='b', rel='external', data-direction='reverse', data-icon='arrow-r', data-iconpos='right')
        =bl['page']
    - })
  div(data-role='footer', data-theme='d', role='contentinfo', class='footer-docs')
    p='&copy; 2011 Daifu Ye'
